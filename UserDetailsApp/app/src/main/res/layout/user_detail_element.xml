<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_5dp"
    android:layout_marginTop="@dimen/dimen_5dp"
    android:background="@drawable/light_grey_left_right_bottom_border"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/detail_left_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="2dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_dialog_email" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin">

        <TextView
            android:id="@+id/detail_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Name name" />

        <TextView
            android:id="@+id/detail_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="age years old from CountryCode" />

    </LinearLayout>

    <ImageView
        android:id="@+id/detail_right_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"/>
</LinearLayout>